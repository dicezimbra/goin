    <!-- Tabas on ProfileFragment-->

    <style name="text_grey_14sp_italic_centered">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="TabWallet" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/grayTabEditProfile</item>
        <item name="tabTextAppearance">@style/TextAppearanceTabWallet</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">center</item>

    </style>

    <style name="TextAppearanceTabWallet" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="SearchViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/style_orange</item>
        <item name="autoCompleteTextViewStyle">@style/CursorOrangeTheme</item>
    </style>

    <style name="CursorOrangeTheme" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/battleshipGrey</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>