<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FindFriendsTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="text_primaryDark_12sp_bold">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SearchViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/style_orange</item>
        <item name="autoCompleteTextViewStyle">@style/CursorOrangeTheme</item>
    </style>

    <style name="CursorOrangeTheme" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/battleshipGrey</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>