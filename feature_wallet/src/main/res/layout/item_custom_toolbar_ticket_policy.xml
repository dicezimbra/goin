<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/toolbar_left_icon_ticket_policy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_keyboard_arrow_left_orange_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="16dp"
        android:text="Ticket Policy"
        android:textAlignment="center"
        android:textColor="@color/grapefruit"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_left_icon_ticket_policy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toolbar_left_icon_ticket_policy"
        app:layout_constraintTop_toTopOf="@+id/toolbar_left_icon_ticket_policy" />


</androidx.constraintlayout.widget.ConstraintLayout>