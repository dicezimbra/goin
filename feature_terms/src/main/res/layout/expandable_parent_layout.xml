<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/expandable_icon"
            android:layout_width="24dp"
            android:layout_height="25dp"
           android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:visibility="visible"
             />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/expandable_icon"
            android:layout_toLeftOf="@+id/expandable_arrow"
            app:layout_goneMarginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:maxLines="1"
            android:id="@+id/expandablet_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/quicksand_medium"
            android:layout_marginTop="0dp"
            tools:text="parent"
            android:textSize="15sp"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/expandable_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/event_arrow_down"
             />


    </RelativeLayout>



</RelativeLayout>