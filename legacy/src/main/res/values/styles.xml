    <!-- SeekBar style -->

    <!-- RatingBar -->

    <!-- RatingBar MyClubs -->
    <style name="CustomRatingBarMyClubs" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">30dp</item>
        <item name="android:numStars">5</item>
    </style>


    <style name="button_orange_style">
        <item name="android:height">@dimen/_40sdp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_buy_orange_style</item>
    </style>

    <style name="button_gradient_style">
        <item name="android:height">@dimen/_40sdp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/gradient_background_welcome</item>
    </style>

    <style name="EditTextEditProfile">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/lightGray</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/grayTabEditProfile</item>
        <item name="colorControlNormal">@color/colorBlack20percent</item>
        <item name="colorControlActivated">@color/grayTabEditProfile</item>
    </style>

    <style name="EditTextTicket" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/lightGray</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/lightGray</item>
        <item name="colorControlNormal">@color/lightGray</item>
        <item name="colorControlActivated">@color/gray</item>
    </style>

    <!-- Tabas on ProfileFragment-->

    <style name="text_black_15sp_bold">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="DialogThemeFullscreen" parent="android:Theme.Dialog">

        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/adark_grey</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>




    <style name="TabWallet" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/grayTabEditProfile</item>
        <item name="tabTextAppearance">@style/TextAppearanceTabWallet</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">center</item>

    </style>

    <style name="TextAppearanceTabWallet" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="ActivityDialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="InputTextstyle" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/style_orange</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/style_orange</item>
        <item name="colorControlNormal">@color/style_orange</item>
        <item name="colorControlActivated">@color/style_orange</item>
    </style>

    <style name="SearchViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/style_orange</item>
        <item name="autoCompleteTextViewStyle">@style/CursorOrangeTheme</item>
    </style>

    <style name="CursorOrangeTheme" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/battleshipGrey</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">16sp</item>
    </style>
