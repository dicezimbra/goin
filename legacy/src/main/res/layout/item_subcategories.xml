<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSubcategories"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/imageViewSubcategories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <View
            android:id="@+id/viewSelectedSubcategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/foreground_selected_item_subcategory"
            android:visibility="invisible"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewSubCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/quicksand_medium"
        tools:text="Brasileira"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/battleship_gray"/>

</LinearLayout>