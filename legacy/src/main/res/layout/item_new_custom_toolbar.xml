    <LinearLayout
        android:id="@+id/search_bar_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="horizontal"
        android:visibility="visible" />


</LinearLayout>

