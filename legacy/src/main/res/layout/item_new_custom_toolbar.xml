<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbarTabsMain"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:background="@color/lightSilver"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/toolbar_left_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:scaleType="center"
        android:src="@drawable/ic_keyboard_arrow_left_orange_24dp"
        android:tint="@color/colorPrimaryDark" />
    <ImageView
        android:id="@+id/space"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:src="@drawable/outline_person_add_black_48" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="12"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="22sp"
        android:id="@+id/toolbar_title"
        android:textColor="@color/grapefruit"
        android:textSize="18sp"
        tools:text="Feed" />
    <ImageView
        android:id="@+id/toolbar_right_second_icon"
        android:layout_width="20dp"
        android:padding="10dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:visibility="visible"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:src="@drawable/outline_person_add_black_48" />
    <ImageView
        android:id="@+id/toolbar_right_icon"
        android:layout_width="16dp"
        android:layout_height="40dp"
        android:padding="3dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:src="@drawable/icon_notificacao" />

