<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/search_bar_text"
                android:layout_width="0dp"
                android:layout_height="43.5dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:background="@null"
                android:maxLines="1"
                android:inputType="text|textCapSentences"
                android:imeOptions="actionSearch"
                />

            <ImageView
                android:id="@+id/search_bar_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:tint="@color/grapefruit"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_search"
                />

            <ImageView
                android:visibility="gone"
                android:id="@+id/search_bar_close_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/baseline_clear_black_36dp"
                />
        </LinearLayout>
        <View
            android:id="@+id/search_bar_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grapefruit"
            />

    </LinearLayout>
</layout>