<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:background="@color/lightSilver">

    <ImageView
        android:id="@+id/ic_back_toolbar_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:padding="15dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_toolbar_categories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="22sp"
        android:text="Restaurants"
        android:textColor="@color/grapefruit"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnClearCategoryFilter"
        app:layout_constraintStart_toEndOf="@+id/ic_back_toolbar_categories"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnClearCategoryFilter"
        android:layout_width="42dp"
        android:visibility="gone"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:padding="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/trash"
        app:layout_constraintBottom_toBottomOf="@+id/search_club_floating_action_button"
        app:layout_constraintEnd_toStartOf="@+id/search_club_floating_action_button"
        app:layout_constraintTop_toTopOf="@+id/search_club_floating_action_button" />


    <ImageButton
        android:id="@+id/search_club_floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/background_search"
        android:padding="10dp"
        android:src="@drawable/icon_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
