<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/constraintClaimError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/background_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/icon_clock_expired_large" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/have_you_used"
            android:textColor="#2B2F34"
            android:textSize="20sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:fontFamily="@font/quicksand"
            android:text="@string/you_can_once_time"
            android:layout_marginTop="8dp"
            android:textColor="#454E5A"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_close_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_white"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="@string/close"
            android:textAllCaps="false"
            android:textColor="@color/gray_dark_modal"
            android:textSize="20sp"
            android:visibility="visible" />

    </LinearLayout>
</merge>